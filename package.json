{
  "name": "varset",
  "version": "0.1.2",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "varset": "index.ts"
  },
  "scripts": {
    "build": "bun build ./index.ts --compile --outfile varset",
    "build:linux": "bun build ./index.ts --compile --target=bun-linux-x64 --outfile varset-linux",
    "build:macos": "bun build ./index.ts --compile --target=bun-darwin-arm64 --outfile varset-macos-arm64",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
